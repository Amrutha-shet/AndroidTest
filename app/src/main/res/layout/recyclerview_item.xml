<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="recycleritemVM" type="com.example.androidtest.viewmodels.RecyclerViewModel">
        </variable>
        <variable name="datamodel" type="com.example.androidtest.model.dataModel.DataModelItem"></variable>

    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:tool="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

    <TextView android:id="@+id/title"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textSize="@dimen/dimen_32sp"
              android:textColor="@android:color/holo_blue_light"
              android:text="@{datamodel.title}"

              android:padding="@dimen/dimen_10dp"

    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp">
        <TextView
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/dimen_24sp"
                android:id="@+id/discription"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:text="@{datamodel.discription}"
                android:textColor="@android:color/black"
                android:layout_weight="7"/>
        <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="fitCenter"
                app:imageUrl="@{recycleritemVM.imageUrl}"/>

    </LinearLayout>

</LinearLayout>
</layout>