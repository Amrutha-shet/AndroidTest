<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/dimen_5dip"/>
            <gradient
                    android:startColor="@color/color_f5f5f5"
                    android:endColor="@color/color_f5f5f5"
                    android:angle="270"
            />
        </shape>
    </item>


    <item
            android:id="@android:id/progress"
    >
        <clip>
            <shape>
                <corners
                        android:radius="@dimen/dimen_5dip"/>
                <gradient
                        android:startColor="@color/color_b0bec5"
                        android:endColor="@color/color_b0bec5"
                        android:angle="270"/>
            </shape>
        </clip>
    </item>

</layer-list>